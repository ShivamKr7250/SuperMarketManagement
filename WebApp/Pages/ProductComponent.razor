@page "/product"

@using CoreBusiness;
@using UseCases.CategoriesUseCase;
@using UseCases.UseCaseInterfaces;

@inject IViewProductUseCases ViewProductUseCases
@inject IGetCategoryByIdUseCase GetCategoryByIdUseCase

<h3>Products</h3>

<br />
@if (products != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Category</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@GetCategoryByIdUseCase.Execute(product.CategoryId)?.Name</td>
                    <td>@product.Name</td>
                    <td>@(Math.Round(product.Price,2))</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    private IEnumerable<Product>? products;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        products = ViewProductUseCases.Execute();
    }
}
